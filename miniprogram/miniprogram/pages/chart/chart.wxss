page {
  background-color: #f6f6f6;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.chart-header {
  box-sizing: border-box;
  padding: 0 24rpx;
  position: fixed;
  height: 100rpx;
  background-color: #FF6F26;
  z-index: 9999;
  display: flex;
  width: 100%;
  justify-content: space-between;
  padding-top: 25rpx;
  }
.chart-header_left,
.chart-header_right {
  border: 2rpx solid black;
  border-radius: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  display: flex
}
.chart-header_left-income,
.chart-header_left-spending,
.chart-header_right-week,
.chart-header_right-month,
.chart-header_right-year {
  width: 100rpx;
  text-align: center;
}
.chart-header_left-income,
.chart-header_right-month,
.chart-header_right-week {
  border-right: 2rpx solid black;
}
.select {
  border-top-left-radius: 18rpx;
  border-bottom-left-radius: 18rpx;
  background-color: rgb(48, 39, 39);
  color: #FF6F26;
}
.chart-content {
  width: 100%;
  margin-top: 101rpx;
  position: fixed;
  background: #f6f6f6;
  z-index: 99;
}
.chart-week {
  width: 100%;
  overflow: auto;
  height: 70rpx;
  white-space: nowrap;
  display: flex;
  font-size: 26rpx;
  border-bottom: 2rpx solid #ece8e8d2;
}
.chart-week_detail {
  width: 20%;
  height: 68rpx;
  display: inline-block;
  text-align: center;
  color: #9e9d9d;
  line-height: 68rpx;
}
.chart-week_detail:first-child {
  color: black;
  border-bottom: 2rpx solid black;
}

.chart-sum,
.chart-data,
.chart-ranking,
.chart-ranking_title {
  padding: 0 24rpx;
}
.chart-sum {
  padding: 20rpx 24rpx;
  position: relative;
}
.chart-sum::after{
  content: "";
  position: absolute;
  width: 93%;
  height: 2rpx;
  background-color: #ece8e8d2;
  bottom: 0;
  left: 3.5%;
}
.chart-sum_num {
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.chart-average-value {
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.chart-data {
  margin-top: 20rpx;
  height: 300rpx;
  border-bottom: 2rpx solid #ece8e8d2;
}
.chart-ranking {
  font-size: 26rpx;
  margin-top: 93%;
  overflow: auto;
  height: 70%;
}
.chart-ranking_title {
  width: 100%;
  font-size: 22rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.chart-ranking-details {
  display: flex;
  align-items: center;
  height: 110rpx;
  /* line-height: 100rpx; */
}
.right {
  width: 87%;
  margin-left: 20rpx;
  position: relative;
}
.right-text {
  margin-bottom: 16rpx;
}
.title {
  margin-right: 10rpx;
}
.amount {
  float: right;
}
