/**app.wxss**/
@import './style//iconfont.wxss';

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  box-sizing:border-box;
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  /* padding: 0 10px; */
} 
  .navbar-relation {
  display: flex;
  
  flex-direction: column;
  
  align-items: center;
  
  line-height: 180rpx;
  
  font-size: 36rpx;
  
  }
  
  .icon-fanhui{
  position: absolute;
  
  left: 2%;
  
  top: 65%;
  
  transform: translate(-2%,-50%);
  
  font-weight: bold;
  
  }

  .left {
    width: 70rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 35rpx;
    background-color: rgba(221, 197, 160, 0.281);
  }
  .icon {
    width: 55rpx;
    height: 55rpx;
  }
  .right::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2rpx;
    background-color: #ece8e8d2;
    top: 90rpx;
    left: 0;
  }
  .select-left {
    border-top-left-radius: 14rpx;
    border-bottom-left-radius: 14rpx;
    background-color: rgb(48, 39, 39);
    color: #FF6F26;
  }
  .select-right {
    border-top-right-radius: 14rpx;
    border-bottom-right-radius: 14rpx;
    background-color: rgb(48, 39, 39);
    color: #FF6F26;
  }
  .select {
    background-color: rgb(48, 39, 39);
    color: #FF6F26;
  }